{
  "name": "webar-ttrpg-game",
  "version": "1.0.0",
  "description": "A cross-platform WebAR TTRPG game with Three.js and AR.js",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server -p 8000 -c-1",
    "start:https": "npx http-server -p 8000 -S -C cert.pem -K key.pem",
    "generate-cert": "npx mkcert create-ca && npx mkcert create-cert",
    "dev": "npx http-server -p 8000 -c-1 -o",
    "test:ar": "npx http-server -p 8000 -c-1 -o ar-test.html"
  },
  "keywords": [
    "webAR",
    "threejs",
    "arjs",
    "game",
    "ttrpg"
  ],
